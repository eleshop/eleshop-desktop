<Page x:Class="Eleshop.Desktop.Pages.Admins.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eleshop.Desktop.Pages.Admins"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="ProductPage"
      Background="Transparent"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <Border Grid.Row="0" CornerRadius="5 5 0 5"
                    Background="{DynamicResource PrimaryBackgroundColor}">

                <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Product"
                               HorizontalContentAlignment="Center"
                               FontSize="25" FontWeight="SemiBold"
                               Foreground="{DynamicResource FourthIconColor}"></Label>
                        </StackPanel>
                </StackPanel>
            </Border>
         <ScrollViewer  Grid.Row="1">
            <WrapPanel x:Name="MainWP">
                <!--<fa:ImageAwesome
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="400 180 0 0"
                            x:Name="loader"
                            Icon="Spinner"
                            Visibility="Visible"
                            Spin="True"
                            Height="120"
                            Width="120"
                            Foreground="{DynamicResource ThirdBackgroundColor}"   
                        />-->
            </WrapPanel>
        </ScrollViewer>

    </Grid>
</Page>
